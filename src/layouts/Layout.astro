---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'SEO & SEA Freelancer in Berlin - Über 20 Jahre Erfahrung in Suchmaschinenoptimierung und Google Ads.' } = Astro.props;
const currentPath = Astro.url.pathname;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.SITE || 'https://teleschmie.de';
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Security -->
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <!-- SEO -->
    <meta name="author" content="Jörg Zimmer" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="Jörg Zimmer - SEO Freelancer" />
    <meta property="og:url" content={`${siteUrl}${currentPath}`} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />

    <!-- Preload critical font -->
    <link rel="preload" href={`${baseUrl}/fonts/inter-latin.woff2`} as="font" type="font/woff2" crossorigin />

    <!-- Self-hosted Inter Font -->
    <style set:html={`
      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 400 700;
        font-display: swap;
        src: url('${baseUrl}/fonts/inter-latin.woff2') format('woff2');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }
      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 400 700;
        font-display: swap;
        src: url('${baseUrl}/fonts/inter-latin-ext.woff2') format('woff2');
        unicode-range: U+0100-02BA, U+02BD-02C5, U+02C7-02CC, U+02CE-02D7, U+02DD-02FF, U+0304, U+0308, U+0329, U+1D00-1DBF, U+1E00-1E9F, U+1EF2-1EFF, U+2020, U+20A0-20AB, U+20AD-20C0, U+2113, U+2C60-2C7F, U+A720-A7FF;
      }
    `} />

    <!-- DNS Prefetch -->
    <link rel="dns-prefetch" href="https://www.linkedin.com" />
    <link rel="dns-prefetch" href="https://www.youtube.com" />

    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#D4FF00" />

    <!-- Canonical -->
    <link rel="canonical" href={`${siteUrl}${currentPath}`} />

    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <Navigation currentPath={currentPath} />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
