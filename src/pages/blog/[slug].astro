---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<Layout
  title={`${post.data.title} | Jörg Zimmer Blog`}
  description={post.data.description}
>
  <article class="section">
    <div class="container-narrow">
      <!-- Back Link -->
      <a href={`${baseUrl}/blog`} class="inline-flex items-center gap-2 text-gray-muted hover:text-dark transition-colors mb-8">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Zurück zum Blog
      </a>

      <!-- Featured Image -->
      {post.data.image && (
        <img
          src={post.data.image}
          alt={post.data.image_alt || post.data.title}
          class="w-full rounded-2xl mb-8"
          loading="eager"
        />
      )}

      <!-- Header -->
      <header class="mb-12">
        <p class="subheadline mb-4">
          {new Date(post.data.date).toLocaleDateString('de-DE', { day: 'numeric', month: 'long', year: 'numeric' })}
        </p>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight mb-6">
          {post.data.title}
        </h1>
        {post.data.linkedin_url && (
          <a
            href={post.data.linkedin_url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm text-gray-muted hover:text-dark transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            Original auf LinkedIn ansehen
          </a>
        )}
      </header>

      <!-- Content -->
      <div class="prose prose-lg max-w-none prose-headings:text-dark prose-p:text-gray-text prose-a:text-lime-600 prose-a:no-underline hover:prose-a:underline prose-strong:text-dark prose-blockquote:border-lime-accent prose-blockquote:bg-gray-50 prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:rounded-r-lg">
        <Content />
      </div>

      <!-- Footer -->
      <footer class="mt-16 pt-8 border-t border-gray-100">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
          <div>
            <p class="font-bold text-dark">Jörg Zimmer</p>
            <p class="text-sm text-gray-muted">SEO & SEA Freelancer, Berlin</p>
          </div>
          <div class="flex gap-4">
            <a
              href="https://www.linkedin.com/in/joerg-zimmer-seo-sea-freelancer-berlin-spandau/"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-secondary text-sm"
            >
              Auf LinkedIn folgen
            </a>
            <a href={`${baseUrl}/kontakt`} class="btn-primary text-sm">
              Kontakt
            </a>
          </div>
        </div>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .prose blockquote {
    font-style: normal;
  }
</style>
